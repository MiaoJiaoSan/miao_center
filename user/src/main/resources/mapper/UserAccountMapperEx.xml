<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.miaojiaosan.user.dal.mapperex.UserAccountMapperEx">

    <resultMap id="BaseResultMap"
               type="com.miaojiaosan.user.dal.dao.UserAccountDAO"
               extends="com.miaojiaosan.user.dal.mapper.UserAccountMapper.BaseResultMap"/>

    <insert id="insert" parameterType="com.miaojiaosan.user.dal.dao.UserAccountDAO">
        insert into user_account
        <trim prefix="(" suffix=")" suffixOverrides=",">
                account,
                password,
            <if test="id != null">
                id,
            </if>
            <if test="nickname != null">
                nickname,
            </if>
            <if test="picture != null">
                picture,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="validate != null">
                validate,
            </if>
            <if test="version != null">
                version,
            </if>
            <if test="modify != null">
                modify,
            </if>
            <if test="modifyTime != null">
                modify_time,
            </if>
            <if test="userId != null">
                user_id,
            </if>
        </trim>
        select
        <trim  suffixOverrides=",">
                #{account,jdbcType=VARCHAR},
                #{password,jdbcType=VARCHAR},
            <if test="id != null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="nickname != null">
                #{nickname,jdbcType=VARCHAR},
            </if>
            <if test="picture != null">
                #{picture,jdbcType=VARCHAR},
            </if>
            <if test="email != null">
                #{email,jdbcType=VARCHAR},
            </if>
            <if test="phone != null">
                #{phone,jdbcType=VARCHAR},
            </if>
            <if test="validate != null">
                #{validate,jdbcType=INTEGER},
            </if>
            <if test="version != null">
                #{version,jdbcType=BIGINT},
            </if>
            <if test="modify != null">
                #{modify,jdbcType=BIGINT},
            </if>
            <if test="modifyTime != null">
                #{modifyTime,jdbcType=TIMESTAMP},
            </if>
            <if test="userId != null">
                #{userId,jdbcType=BIGINT}
            </if>
            from dual
            where not exists(select 1 from user_account where account = #{account,jdbcType=VARCHAR} )
        </trim>
    </insert>

    <select id="byAccount" parameterType="string" resultMap="BaseResultMap">
        select
        id, account, password,
      nickname, picture, email,
      phone, validate, version,
      modify, modify_time, user_id
      from user_account where account = #{account,jdbcType=VARCHAR}
    </select>
</mapper>